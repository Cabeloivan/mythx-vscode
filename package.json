{
    "name": "mythxvsc",
    "displayName": "MythX for VSCode",
    "description": "VS Code extension for MythX",
    "version": "0.7.2",
    "publisher": "mirkogarozzo",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ConsenSys/mythx-vscode"
    },
    "engines": {
        "vscode": "^1.33.0-insider"
    },
    "categories": [
        "Extension Packs",
        "Other"
    ],
    "activationEvents": [
        "onCommand:mythx.analyzeContract",
        "onCommand:mythx.runFullMode",
        "onCommand:mythx.runStandardMode"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "mythxvsc",
            "properties": {
                "mythxvsc.ethAddress": {
                    "type": "string",
                    "default": "0x0000000000000000000000000000000000000000",
                    "description": "MythX EthAddress credential."
                },
                "mythxvsc.password": {
                    "type": "string",
                    "default": "trial",
                    "description": "MythX password credential."
                },
                "mythxvsc.environment": {
                    "type": "string",
                    "default": "https://api.mythx.io/v1/",
                    "description": "MythX environment."
                }
            }
        },
        "commands": [
            {
                "command": "mythx.analyzeContract",
                "title": "MythX: Analyze smart contract",
                "icon": {
                    "light": "images/mythx-grey.svg",
                    "dark": "images/mythx-light-grey.svg"
                }
            },
            {
                "command": "mythx.runFullMode",
                "title": "MythX: Run Full Mode Analysis"
            },
            {
                "command": "mythx.runStandardMode",
                "title": "MythX: Run Standard Mode Analysis (~30mins)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "when": "resourceLangId == solidity",
                    "command": "mythx.analyzeContract"
                },
                {
                    "when": "resourceLangId == solidity",
                    "command": "mythx.runFullMode"
                },
                {
                    "when": "resourceLangId == solidity",
                    "command": "mythx.runStandardMode"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceLangId == solidity",
                    "command": "mythx.analyzeContract",
                    "group": "2_mythx"
                }
            ],
            "editor/title": [
                {
                    "when": "resourceLangId == solidity",
                    "command": "mythx.analyzeContract",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "package": "npx vsce package",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ],
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/fs-extra": "^5.0.5",
        "@types/node": "^11.13.8",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "vscode": "^1.1.34"
    },
    "dependencies": {
        "chai": "^4.2.0",
        "eslint": "^6.8.0",
        "fs-extra": "^7.0.1",
        "husky": "^4.2.1",
        "mythxjs": "^1.3.11",
        "prettier": "^1.19.1"
    },
    "extensionDependencies": [
        "JuanBlanco.solidity"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "tsc && lint-staged"
        }
    }
}
