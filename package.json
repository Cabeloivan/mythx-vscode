{
    "name": "mythxvsc",
    "displayName": "VS Code for MythX",
    "description": "VS Code extension for MythX",
    "version": "0.2.1",
    "publisher": "mirkogarozzo",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ConsenSys/mythx-vscode"
    },
    "engines": {
        "vscode": "^1.33.0-insider"
    },
    "categories": [
        "Extension Packs",
        "Other"
    ],
    "activationEvents": [
        "onCommand:mythx.analyzeContract"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "mythxvsc",
            "properties": {
                "mythxvsc.ethAddress": {
                    "type": "string",
                    "default": "0x0000000000000000000000000000000000000000",
                    "description": "MythX EthAddress credential."
                },
                "mythxvsc.password": {
                    "type": "string",
                    "default": "trial",
                    "description": "MythX password credential."
                },
                "mythxvsc.jwtAccess": {
                    "type": "string",
                    "default": "",
                    "description": "MythX Access Token."
                },
                "mythxvsc.jwtRefresh": {
                    "type": "string",
                    "default": "",
                    "description": "MythX Refresh Token"
                }
            }
        },
        "commands": [
            {
                "command": "mythx.analyzeContract",
                "title": "MythX: Analyze smart contract"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "when": "resourceLangId == solidity",
                    "command": "mythx.analyzeContract"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceLangId == solidity",
                    "command": "mythx.analyzeContract",
                    "group": "2_mythx"
                }
            ],
            "editor/title": [
                {
                    "when": "resourceLangId == solidity",
                    "command": "mythx.analyzeContract",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "package": "npx vsce package",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/fs-extra": "^5.0.5",
        "@types/node": "^11.13.8",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "vscode": "^1.1.34"
    },
    "dependencies": {
        "fs-extra": "^7.0.1",
        "mythxjs": "^1.3.1",
        "vscode-azureextensionui": "^0.23.3"
    },
    "extensionDependencies": [
        "ms-vscode.azure-account",
        "JuanBlanco.solidity"
    ]
}
